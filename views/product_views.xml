<odoo>
  <data>

    <record id="weproduct_product_form_view" model="ir.ui.view">
      <field name="name">weOdooProduct.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <div name="button_box" position="inside">
            <button class="oe_stat_button" name="action_view_indice" type="object" icon="fa-list-ol">
              <div class="o_field_widget o_stat_info mr4">
                <span class="o_stat_text">Indice :</span>
              </div>
              <div class="o_field_widget o_stat_info">
                <span class="o_stat_value">
                  <field name="current_indice"/>
                </span>

              </div>
            </button>
          </div>
        </data>
      </field>
    </record>

    <record id="weproduct_product_form_sheetmetal_view" model="ir.ui.view">
      <field name="name">weOdooProduct.product.sheetmetal.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <notebook position="inside">
            <field name="is_sheetmetal" invisible="1"/>
            <page name="we_product_sheetmetal" string="Sheetmetal"   attrs="{'invisible': [('is_sheetmetal', '=', False)]}">
              <group>
                <group name="we_product_sheetmetal_group_general">
                  <field name="material" />
                  <field name="sheet_length" />
                  <field name="sheet_width" />
                  <field name="sheet_thickness" />
                  <field name="surface" />
                  <field name="weight" />
                </group>
              </group>
            </page>
          </notebook>

        </data>
      </field>
    </record>

    <record id="weproduct_product_form_profile_view" model="ir.ui.view">
      <field name="name">weOdooProduct.product.profile.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <notebook position="inside">
            <field name="is_profile" invisible="1"/>
            <page name="we_product_profile" string="Profile"  attrs="{'invisible': [('is_profile', '=', False)]}">
              <group>
                <group name="we_product_profile_group_general">
                  <field name="material" />
                  <field name="profile_length" />
                  <field name="profile_surface_section" />
                  <field name="profile_surface_meter" />
                  <field name="profile_weight_meter" />
                  <field name="surface" />
                  <field name="weight" />
                </group>
              </group>
            </page>
          </notebook>

        </data>
      </field>
    </record>
  </data>
</odoo>