<odoo>
  <data>

    <record id="wemetal_product_template_form_view" model="ir.ui.view">
      <field name="name">weMetalProduct.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <div name="button_box" position="inside">
            <!-- <button class="oe_stat_button" name="action_view_indice" type="object" icon="fa-list-ol">
              <div class="o_field_widget o_stat_info mr4">
                <span class="o_stat_text">Indice :</span>
              </div>
              <div class="o_field_widget o_stat_info">
                <span class="o_stat_value">
                  <field name="current_indice"/>
                </span>

              </div>
            </button> -->
          </div>
        </data>
      </field>
    </record>

    <record id="wemetal_product_profile_form_view" model="ir.ui.view">
      <field name="name">weMetalProduct.product.profile.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <notebook position="inside">
            <!-- <page name="we_product_profile" string="Profile" attrs="{'invisible': [('is_profile', '=', False)]}"> -->
            <page name="we_product_profile" string="Dimensions">
              <group >
                <group string="Types">
                  <field name="isprofile" invisible="0"/>
                  <field name="issheetmetal" invisible="0"/>
                  <!-- <field name="product_type" invisible="0"/>
                  <field name="is_predefined_profile" invisible="0"/>
                  <field name="profile_type" invisible="0" /> -->
                  <field name="product_variant_count" invisible="0" />
                </group>
                <group string="Matiere">
                  <label for="material"/>
                  <div>
                    <field name="material" />
                  </div>
                  <label for="finition"/>
                  <div>
                    <field name="finition" />
                  </div>
                </group>
                <group string="Dimensions" attrs="{'invisible': [('product_variant_count', '>',1)]}">
                  <!-- <field name="profile_length" /> -->
                  <field name="length" />
                  <field name="width" />
                  <field name="height" />
                  <field name="thickness" />
                </group>
                <group string="Dimensions ProfilÃ©" attrs="{'invisible': ['|',  ('product_variant_count', '>',1),('isprofile','=',False)]}">
                  <label for="length">Longueur</label>
                  <div>
                    <field name="length" />
                  </div>
                  <label for="width">Largeur</label>
                  <div>
                    <field name="width" />
                  </div>
                  <label for="thickness">Epaisseur</label>
                  <div>
                    <field name="thickness" />
                  </div>
                </group>
                <group string="Dimensions Tole" attrs="{'invisible': ['|',  ('product_variant_count', '>',1),('issheetmetal','=',False)]}">
                  <label for="length">Longueur</label>
                  <div>
                    <field name="length" />
                  </div>
                  <label for="width">Largeur</label>
                  <div>
                    <field name="width" />
                  </div>
                  <label for="thickness">Epaisseur</label>
                  <div>
                    <field name="thickness" />
                  </div>
                </group>
                <group string="Informations" attrs="{'invisible': [('product_variant_count', '>', 1)]}">
                  <!-- <field name="surface_section" />
                  <field name="surface_meter" />
                  <field name="weight_meter" /> -->
                  <field name="surface" />
                  <field name="weight" />
                </group>
              </group>
            </page>
          </notebook>

        </data>
      </field>
    </record>
    <record id="wemetal_product_product_form_view" model="ir.ui.view">
      <field name="name">weMetalProduct.product.profile.form</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
      <field name="arch" type="xml">
        <xpath expr="//group[@name='weight']" position="replace">
          <group name="weight" string="Logistique" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">

            <label for="surface"/>
            <div class="o_row">
              <field name="surface"/>
              <span>
                <!-- <field name="surface_uom_name"/> -->
              </span>
            </div>
            <label for="volume"/>
            <div class="o_row">
              <field name="volume"/>
              <span>
                <field name="volume_uom_name"/>
              </span>
            </div>
            <label for="weight"/>
            <div class="o_row">
              <field name="weight"/>
              <span>
                <field name="weight_uom_name"/>
              </span>
            </div>
          </group>
        </xpath>
        <xpath expr="//sheet" position="inside">
          <group>
            <group name="dimensions" string="Dimensions">
              <label for="length"/>
              <div class="o_row">
                <field name="length"/>
              </div>
              <label for="width"/>
              <div class="o_row">
                <field name="width"/>
              </div>
              <label for="thickness"/>
              <div class="o_row">
                <field name="thickness"/>
              </div>
            </group>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>