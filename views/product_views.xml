<odoo>
  <data>
    <!-- base structure of product.template, common with product.product -->
    <record id="weproduct_product_form_view" model="ir.ui.view">
      <field name="name">weOdooProduct.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <data>
          <div name="button_box" position="inside">
            
            <button class="oe_stat_button" name="action_view_indice" type="object" icon="fa-wrench">
              <field string="Indice" name="current_indice" widget="statinfo"/>
            </button>
            
            
          </div>
        </data>
      </field>
    </record>


  </data>
</odoo>