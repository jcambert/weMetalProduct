<odoo>
    <data>
        <record id="weproduct_sheetmetal_list_view" model="ir.ui.view">
            <field name="name">weOdooProduct.sheetmetal.list.view</field>
            <field name="model">we.sheetmetal</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="length" />
                    <field name="width" />
                </tree>
            </field>
        </record>
        <record id="weproduct_sheetmetal_form_view" model="ir.ui.view">
            <field name="name">weOdooProduct.sheetmetal.form.view</field>
            <field name="model">we.sheetmetal</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="length"/>
                                <field name="width"/>
                            </group>
                            <group>
                                <field name="convention"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="we_sheetmetal_action" model="ir.actions.act_window">
            <field name="name">Sheetmetal</field>
            <field name="res_model">we.sheetmetal</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>