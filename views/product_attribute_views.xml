<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="we_product_attribute_view_form_inherited" model="ir.ui.view">
        <field name="name">we.product.attribute.view.form.inherited</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="model">product.attribute</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_fields']" position="inside">
                <field name="uom_domain_id" invisible="1" />
                <field name="uom_id" domain="[('category_id.id','=', uom_domain_id )]" attrs="{'invisible': [('display_type', 'not in', ('dimension','thickness'))]}"/>
            </xpath>
            <xpath expr="//field[@name='value_ids']/tree" position="inside">
                <field name="length" string="Width" attrs="{'column_invisible': [('parent.display_type', '!=', 'sheetmetalsize')]}" />
                <field name="width" string="Length" attrs="{'column_invisible': [('parent.display_type', '!=', 'sheetmetalsize')]}" />
                <field name="thickness" string="Thickness" attrs="{'column_invisible': [('parent.display_type', '!=', 'thickness')]}" />
                <field name="material" string="Material" attrs="{'column_invisible': [('parent.display_type', '!=', 'material')]}" />
            </xpath>
        </field>
    </record>

</odoo>
