<odoo>
    <data>

        <record id="wemetal_product_category_form_view" model="ir.ui.view">
            <field name="name">weMetalProduct.product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group name="convention" string="Conventions">
                        <field name="convention" />
                        <field name="surface_formula" />
                        <field name="weight_formula" />
                    </group>
                    <group name="type" string="Type">
                        <field name="cattype" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>